interview&playlist_slugs%5B%5D=preparation-kits&playlist_slugs%5B%5D=three-month-preparation-kit&playlist_slugs%5B%5D=three-month-week-one */
void plusMinus(vector<int> arr) {
    int n = arr.size();
    float positive=0;
    float negative=0;
    float zero=0;
    for(int i = 0;i<n;i++)
    {
        if(arr[i]>0)
            positive++;
        else if(arr[i]<0)
            negative++;
        else{
            zero++;
        }
    }
    cout << positive/n <<endl;
    cout << negative/n <<endl;
    cout << zero/n << endl;
}
